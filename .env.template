# Configuration Template - Copy this file to .env and set your values
# Command: cp .env.template .env

# ===============================================================================
# Ì¥ë DATADOG API CONFIGURATION (REQUIRED)
# ===============================================================================
# Your DataDog API credentials - Get these from your DataDog dashboard
# https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your_datadog_api_key_here
DD_APP_KEY=your_datadog_application_key_here

# DataDog site (optional - defaults to api.datadoghq.com)
# For EU: api.datadoghq.eu, for other regions check DataDog docs
# DD_SITE=api.datadoghq.com

# ===============================================================================
# ‚ö° PERFORMANCE OPTIMIZATION
# ===============================================================================
# Enable cache preloading at application startup for faster responses
# When true: YODA loads all services and monitor tags at startup (~2-3 seconds)
# When false: YODA loads data on-demand (slower first queries)
# Values: true, false
PRELOAD_CACHES=true

# ===============================================================================
# Ì¥í SSL CONFIGURATION
# ===============================================================================
# SSL certificate verification for DataDog API calls
# Set to false if you have corporate SSL interception or certificate issues
# Values: true, false (default: true)
SSL_VERIFY=true

# ===============================================================================
# Ì∑† LLM API CONFIGURATION
# ===============================================================================
# Custom LLM API endpoint (optional - defaults to OpenAI)
# Use this if you have a custom LLM deployment or different provider
# Default: https://api.openai.com/v1/chat/completions
# LLM_API_URL=https://your-custom-llm-api.com/v1/chat/completions

# OpenAI API Key (required for YODA's intelligence)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===============================================================================
# Ìºê NETWORK CONFIGURATION (OPTIONAL)
# ===============================================================================
# HTTP proxy settings (if needed for corporate networks)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080
# NO_PROXY=localhost,127.0.0.1,.company.com

# Request timeout for API calls (seconds)
# REQUEST_TIMEOUT=30

# ===============================================================================
# ÌæõÔ∏è UI CONFIGURATION (OPTIONAL)
# ===============================================================================
# Gradio interface settings
# UI_PORT=7860
# UI_HOST=0.0.0.0
# UI_SHARE=false

# ===============================================================================
# Ì≥ä CACHE CONFIGURATION (OPTIONAL)
# ===============================================================================
# Cache expiration times (hours)
# SERVICES_CACHE_HOURS=4
# MONITOR_TAGS_CACHE_HOURS=4

# ===============================================================================
# Ì¥ß DEBUG & DEVELOPMENT (OPTIONAL)
# ===============================================================================
# Enable debug logging
# DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

